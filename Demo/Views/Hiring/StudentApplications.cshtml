@model List<Appliedcompany>

<!--Total Companies page-->
<div class="main-content" style="margin-left:-9%;width:140%;">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="card-title">Companies List</h4>
                            <p class="card-title-desc">

                            </p>
                            <table class="table table-striped table-bordered dt-responsive" id="company-table" style="width:100%;">
                                @if (Model == null)
                                {
                                    <p>There is no data to be displayed</p>
                                }
                                else
                                {
                                    <thead>
                                        <tr class="table-primary">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                CIF<i class="fas fa-info-circle" style="margin-left:4px" data-bs-container="#tooltip-container" data-bs-toggle="tooltip" data-bs-placement="top" title="Company Identification Number"></i>
                                               </div>
                                            </td>
                                            <td>Name</td>
                                            <td>Contact</td>
                                            <td>Alternate Contact</td>
                                            <td>Email</td>
                                            <td>Alternate Email</td>
                                            <td>Designation</td>
                                            <td>Job Location</td>
                                            <td>Total Applications</td>
                                            <td width="150px">Action</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.cif</td>
                                                <td>@item.name</td>
                                                <td>@item.contact</td>
                                                <td>@item.alt_contact</td>
                                                <td>@item.email</td>
                                                <td>@item.alt_email</td>
                                                <td>@item.designation</td>
                                                <td>@item.joblocation</td>
                                                <td>@item.counts</td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                    <a asp-controller="Hiring" asp-action="StdAppList" class="btn btn-outline-info me-2" asp-route-hid="@item.hid">
                                                        Details
                                                    </a>
                                                    <a asp-controller="Export" asp-action="ExportDataToFile" class="btn btn-outline-success" asp-route-Export="appliedcompanystudent" asp-route-hid="@item.hid" asp-route-name="@item.name - @item.designation">
                                                        Export
                                                    </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            var table = $("#company-table").DataTable({
                "scrollX": true,
                pageLength: 10,
                lengthMenu: [10, 15, 25],
                order: []
            })
        });
    </script>
}


