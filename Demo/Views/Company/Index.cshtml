@{
    Layout = "_Layout";
}
<!--Total Companies page-->
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Recruiting Companies </h4>
                <p class="card-title-desc">
                   All Companies looking for interns/employees are displayed here:
                </p>

                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Office</th>
                            <th>Age</th>
                            <th>Start date</th>
                            <th>Salary</th>
                            <th>Details</th>
                        </tr>
                    </thead>


                    <tbody>
                        <tr>
                            <td>Tiger Nixon</td>
                            <td>System Architect</td>
                            <td>Edinburgh</td>
                            <td>61</td>
                            <td>2011/04/25</td>
                            <td>$320,800</td>
                            <td>
                                 <a asp-controller="Company" asp-action="CompanyDetails" class="btn btn-info waves-effect waves-light">
                                 Info   
                                </a>
                            </td>
                        </tr>                       
                    </tbody>
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->

</div>
</div>
</div>